@model WebsiteThuCungBento.Models.KHACHHANG

@{
    ViewBag.Title = "Sửa thông tin ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/fontawesome.min.css">

<section id="breadcrumb-wrapper3" class="breadcrumb-w-img">
    <div class="breadcrumb-overlay"></div>
    <div class="breadcrumb-content">
        <div class="wrapper">
            <div class="inner text-center">
                @*<div class="breadcrumb-big">
                        <h2> Tài khoản </h2>
                    </div>*@<br />
                <div class="breadcrumb-small">
                    <a href="@Url.Action("index", "User")" title="Quay trở về trang chủ">Trang chủ</a>
                    <span aria-hidden="true">/</span>
                    <span>Sửa Thông Tin Cá Nhân</span>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<div class="container mt-5" style="max-width: 900px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 10px; padding: 10px; background-color: #ffffff;">
    <div class="card shadow-sm p-4 bg-light">
        <h1 class="text-center mb-4">SỬA THÔNG TIN CÁ NHÂN</h1>
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="HOTENKH">Họ tên</label>
                        @Html.EditorFor(model => model.HOTENKH, new { htmlAttributes = new { @class = "form-control border-input" } })
                        @Html.ValidationMessageFor(model => model.HOTENKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="DIENTHOAI">Số Điện Thoại</label>
                        @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control border-input", onkeypress = "return isNumberKey(event)" } })
                        @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="TENDNKH">Tên đăng nhập</label>
                        @Html.EditorFor(model => model.TENDNKH, new { htmlAttributes = new { @class = "form-control border-input" } })
                        @Html.ValidationMessageFor(model => model.TENDNKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="EMAIL">Email</label>
                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control border-input" } })
                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="NGAYSINH">Ngày sinh</label>
                        @Html.TextBoxFor(model => model.NGAYSINH, "{0:yyyy-MM-dd}", new { @class = "form-control border-input", type = "date" })
                        @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="DIACHI">Địa Chỉ</label>
                        @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control border-input" } })
                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="HINHANH">Hình ảnh</label>
                        <div class="d-flex align-items-center">
                            <img src="@Url.Content("~/img/" + @Model.HINHANH)" alt="User Image" class="img-thumbnail mr-3" style="height: 100px; width: 100px;" />
                            <input type="file" id="fileUpload" name="fileUpload" class="form-control border-input" />
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg">Cập nhật</button>
                <a href="@Url.Action("thongtincanhan", "User")" class="btn btn-secondary btn-block rounded-button">Quay lại trang trước</a>
            </div>
        }
    </div>
</div>

<script language='javascript'>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) return false;
        return true;
    }
</script>

<style>
    .rounded-input {
        border-radius: 0.5rem;
        padding: 0.75rem;
    }

    .rounded-button {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-edit-info {
        padding: 2rem;
        background-color: #f9f9f9;
        border-radius: 0.5rem;
    }
</style>
