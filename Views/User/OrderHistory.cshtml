        if (confirm("Bạn có chắc chắn đã nhận được hàng?")) {
            $.ajax({
                url: '@Url.Action("ConfirmReceived", "User")',
                type: 'POST',
                data: { id: orderId },
                success: function () {
                    // Update the UI to reflect the new status
                    location.reload(); // Reload to update status
                },
