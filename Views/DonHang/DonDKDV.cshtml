        pointer-events: none;
    }

    #viewComment {
        background-color: #f8f9fa;
        min-height: 50px;
    }

    #viewRatingModal {
        /*        display: block ;*/
        visibility: visible !important;
        opacity: 1 !important;
/*        padding-top: 200px;*/
    }
</style>
