<script>

    // Khai báo biến để lưu trữ biểu đồ
    window.dailyRevenueChart = null;

    // Hàm cập nhật biểu đồ khi chọn tháng và năm
    function updateChart() {
        var month = document.getElementById("selectMonth").value;
        var year = document.getElementById("selectYear").value;
        loadChart(month, year);
    }

    // Hàm tải dữ liệu và vẽ biểu đồ doanh thu theo ngày
    function loadChart(month, year) {
        $.ajax({
            url: '/ThongKe/ThongKeDoanhThuTheoNgay', // Đường dẫn đến API thống kê
            data: { month: month, year: year },
            success: function (data) {
                var labels = [];
                var doanhThu = [];

                // Duyệt qua dữ liệu trả về và tạo danh sách labels và dữ liệu doanh thu
                $.each(data, function (i, item) {
                    labels.push(item.Ngay + '/' + month); // Hiển thị ngày/tháng
                    doanhThu.push(item.TongDoanhThu);
                });

                // Xóa biểu đồ cũ nếu tồn tại
                if (window.dailyRevenueChart instanceof Chart) {
                    window.dailyRevenueChart.destroy();
                }

                // Tạo biểu đồ mới
                var ctx = document.getElementById("dailyRevenueChart").getContext('2d');
                window.dailyRevenueChart = new Chart(ctx, {
                    type: 'bar', // Dạng biểu đồ, bạn có thể đổi thành 'pie', 'line', v.v...
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Doanh thu theo ngày',
                            data: doanhThu,
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function (value) {
                                        return value.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                                    }
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        var label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        label += context.raw.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    }

    // Gọi hàm updateChart khi trang được tải để khởi tạo biểu đồ với tháng và năm mặc định
    window.onload = function () {
        updateChart();
    };

</script>

